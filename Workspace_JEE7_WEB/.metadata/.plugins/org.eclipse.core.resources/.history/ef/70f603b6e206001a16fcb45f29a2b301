package com.user.data;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.Serializable;

public class UserDAOImpl implements UserDAO 
{
	boolean flag=false;
	File file=null;
	 public UserDAOImpl() 
	 {	
			file=new File("D:\\Allianz Pgm\\files\\user.txt");
		
	 }
	
	@Override
	public boolean insertIntoFile(User u) 
	{
		try
		{			
			ObjectOutputStream oos=new ObjectOutputStream(new FileOutputStream(file));
			oos.writeInt(u.getId());
			oos.writeObject(u.getUname());
			oos.writeInt(u.getAge());
			oos.writeFloat(u.getSalary());
			flag=true;
			
		}
		catch(IOException e)
		{
			System.err.print(e);
		}
		return flag;
	}

	@Override
	public User displayFromFile()
	{
		User u=null;
		try
		{
			FileInputStream fis=new FileInputStream(file);
			ObjectInputStream ois=new ObjectInputStream(fis);
			u=new User();
			while()
			u.setId(ois.readInt());
			u.setUname((String)ois.readObject());
			u.setAge(ois.readInt());
			u.setSalary(ois.readFloat());
		}
		catch(IOException | ClassNotFoundException e)
		{
			System.err.print(e);
		}
		if(u==null)
		return null;
		else
			return u;
	}

}
