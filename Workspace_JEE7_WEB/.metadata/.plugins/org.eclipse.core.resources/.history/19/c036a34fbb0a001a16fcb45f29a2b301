	@Override
	public boolean addCategory(Category category) 
	{
		Connection connection=null;		
		try
		{
			connection=DBUtilityConnection.getConnection();
			String sql="INSERT INTO product(Category_ID,Category_Code,Category_Desc,productDescription,productPrice,productDate) values(?,?,?,?,?)";
			PreparedStatement ps=connection.prepareStatement(sql);
			ps.setInt(1, category.getId());
			ps.setString(2, category.getCode());
			ps.setString(3, category.getDescription());
			ps.setFloat(4, product.getPrice());
			ps.setDate(5,DateUtility.convertUtilDateToSQLDate(product.getManfDate()));			
			int no=ps.executeUpdate();
			if(no>0)
				return true;
							
		}
		catch(Exception s)
		{
			s.printStackTrace();
		}
		return false;
		return false;
	}

